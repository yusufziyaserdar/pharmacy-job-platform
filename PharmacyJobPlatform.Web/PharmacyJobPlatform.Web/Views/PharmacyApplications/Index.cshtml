@model IEnumerable<dynamic>

<div class="container mt-4">
    <h2>Gelen Başvurular</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Çalışan</th>
                <th>İlan</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.WorkerName</td>
                    <td>@app.JobTitle</td>
                    <td>@app.Status</td>
                    <td>
                        <a asp-action="Accept" asp-route-id="@app.Id" class="btn btn-success btn-sm">Kabul</a>
                        <a asp-action="Reject" asp-route-id="@app.Id" class="btn btn-danger btn-sm">Red</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
