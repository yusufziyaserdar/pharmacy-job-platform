@using System.Security.Claims
@inject PharmacyJobPlatform.Infrastructure.Data.ApplicationDbContext db

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Pharmacy Job Platform</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Chat Widget CSS -->
    <link rel="stylesheet" href="~/css/chat-widget.css" />

</head>
<body>

    @* 🔹 Ortak değişkenler *@
    @{
        int? userId = null;
        int unreadCount = 0;

        if (User.Identity?.IsAuthenticated ?? false)
        {
            userId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));

            unreadCount = db.Messages.Count(m =>
            !m.IsRead &&
            m.SenderId != userId &&
            (m.Conversation.User1Id == userId ||
            m.Conversation.User2Id == userId));
        }
    }

    <!-- 🔹 NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">

            <!-- LOGO -->
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-pills me-1"></i> Pharmacy Job
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- 🔹 SOL MENÜ -->
                <ul class="navbar-nav me-auto">

                    @if (userId != null)
                    {
                        <!-- 💬 MESAJLAR -->
                        <li class="nav-item">
                            <a class="nav-link position-relative"
                               asp-controller="Messages"
                               asp-action="Index">
                                <i class="fa-solid fa-comments"></i> Mesajlar

                                <span id="unreadBadge"
                                      class="position-absolute top-0 start-100 translate-middle
                                             badge rounded-pill bg-danger @(unreadCount > 0 ? "" : "d-none")">
                                    @(unreadCount > 0 ? unreadCount : "")
                                </span>
                            </a>
                        </li>

                        <!-- Worker Menü -->
                        @if (User.IsInRole("Worker"))
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="WorkerDashboard"
                                   asp-action="Index">
                                    <i class="fa-solid fa-chart-line"></i> Panel
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Jobs" asp-action="Index">
                                    <i class="fa-solid fa-briefcase"></i> İş İlanları
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="JobApplications" asp-action="MyApplications">
                                    <i class="fa-solid fa-file-circle-check"></i> Başvurularım
                                </a>
                            </li>
                        }

                        <!-- Pharmacy Menü -->
                        @if (User.IsInRole("PharmacyOwner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="PharmacyDashboard" asp-action="Index">
                                    <i class="fa-solid fa-chart-line"></i> Panel
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="JobPosts" asp-action="MyPosts">
                                    <i class="fa-solid fa-list"></i> İlanlarım
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="JobPosts" asp-action="Create">
                                    <i class="fa-solid fa-plus"></i> İlan Oluştur
                                </a>
                            </li>

                        }
                    }
                </ul>

                <!-- 🔹 SAĞ MENÜ -->
                <ul class="navbar-nav ms-auto">

                    @if (userId != null)
                    {
                        <!-- 👤 PROFİL -->
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Profile"
                               asp-action="Index"
                               asp-route-id="@userId">
                                <i class="fa-solid fa-user"></i>
                                @User.Identity.Name
                            </a>
                        </li>

                        <!-- 🚪 ÇIKIŞ -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Logout">
                                <i class="fa-solid fa-right-from-bracket"></i> Çıkış
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Login">
                                <i class="fa-solid fa-right-to-bracket"></i> Giriş
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Register">
                                <i class="fa-solid fa-user-plus"></i> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <!-- 🔹 MAIN CONTENT -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        @await Component.InvokeAsync("ChatWidget")
    }

    <!-- 🔹 FOOTER -->
    <footer class="bg-light text-center py-3 mt-5 border-top">
        <small class="text-muted">
            © @DateTime.Now.Year - Pharmacy Job Platform
        </small>
    </footer>


    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>




    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>
        <script src="~/js/chat-connection.js"></script>
        <script src="~/js/chat-widget.js"></script>
    }




    @RenderSection("Scripts", required: false)


</body>
</html>
