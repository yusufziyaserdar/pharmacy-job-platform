@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- HERO SECTION -->
<section class="py-5 text-center bg-light rounded-3">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">
            <i class="fa-solid fa-syringe fa-shake"></i> Eczaneler & Çalışanlar Tek Platformda
        </h1>

        <p class="lead text-muted mb-4">
            Eczane sahipleri iş ilanı açsın, çalışanlar başvursun.
            Kalıcı ya da günlük nöbet işleri için hızlı ve güvenli çözüm.
        </p>

        @if (!(User.Identity?.IsAuthenticated ?? false))
        {
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Auth" asp-action="Register"
                   class="btn btn-primary btn-lg px-4">
                    Çalışan Olarak Kayıt Ol
                </a>

                <a asp-controller="Auth" asp-action="Register"
                   class="btn btn-outline-primary btn-lg px-4">
                    Eczane Sahibi Olarak Kayıt Ol
                </a>
            </div>
        }
        else
        {
            <a asp-controller="Jobs" asp-action="Index"
               class="btn btn-success btn-lg px-5">
                İlanları Gör
            </a>
        }
    </div>
</section>

<!-- FEATURES -->
<section class="container my-5">
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="fw-bold"><i class="bi bi-person-badge me-2"></i>Çalışanlar</h3>
                    <p class="text-muted mt-2">
                        Günlük nöbet veya kalıcı iş ilanlarına başvur,
                        başvurularını takip et.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="fw-bold"><i class="bi bi-hospital me-2"></i>Eczane Sahipleri</h3>
                    <p class="text-muted mt-2">
                        İlan oluştur, başvuruları incele,
                        uygun çalışanla mesajlaş.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h3 class="fw-bold"><i class="bi bi-chat-dots me-2"></i>Mesajlaşma</h3>
                    <p class="text-muted mt-2">
                        Kabul edilen başvurularda otomatik mesajlaşma başlasın.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- HOW IT WORKS -->
<section class="bg-white py-5 border-top">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">Nasıl Çalışır?</h2>

        <div class="row">
            <div class="col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="bi bi-check-circle me-2"></i>Kayıt ol</li>
                    <li class="list-group-item"><i class="bi bi-check-circle me-2"></i>Profilini oluştur</li>
                    <li class="list-group-item"><i class="bi bi-check-circle me-2"></i>İlan aç veya başvur</li>
                </ul>
            </div>

            <div class="col-md-6">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="bi bi-chat-dots me-2"></i>Mesajlaş</li>
                    <li class="list-group-item"><i class="fa-solid fa-handshake"></i> Anlaş</li>
                    <li class="list-group-item"><i class="bi bi-rocket-takeoff me-2"></i>Hızlıca işe başla</li>
                </ul>
            </div>
        </div>
    </div>
</section>
