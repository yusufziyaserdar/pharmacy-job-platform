@model List<PharmacyJobPlatform.Web.Models.ViewModels.InboxConversationViewModel>
@using System.Security.Claims

@{
    int userId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);
}

<div class="container mt-4">
    <h3 class="mb-4">💬 Mesajlar</h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz bir mesajlaşmanız yok.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var conv in Model)
            {

                
                 <a asp-controller="Profile"
                   asp-action="Index"
                   asp-route-id="@conv.OtherUserId"
                   class="fw-bold text-decoration-none">
                    @conv.OtherUserFullName
                </a>
                <a asp-action="Chat"
                   asp-route-id="@conv.ConversationId"
                   class="list-group-item list-group-item-action d-flex justify-content-between">


                        <small class="text-muted">@conv.LastMessage</small>


                    @if (conv.UnreadCount > 0)
                    {
                        <span class="badge bg-danger rounded-pill">
                            @conv.UnreadCount
                        </span>
                    }
                </a>
            }

        </div>
    }
</div>
