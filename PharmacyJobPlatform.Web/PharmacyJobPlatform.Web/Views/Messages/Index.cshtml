@model PharmacyJobPlatform.Web.Models.ViewModels.MessagesInboxViewModel

<div class="container mt-4">
    <h3 class="mb-4"><i class="bi bi-chat-dots me-2"></i>Mesajlar</h3>

    @if (Model.IncomingRequests.Any())
    {
        <div class="mb-4">
            <h5><i class="bi bi-envelope-paper me-2"></i>Gelen Mesaj İstekleri</h5>
            <div class="list-group">
                @foreach (var request in Model.IncomingRequests)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <img src="@(string.IsNullOrEmpty(request.FromUserProfileImagePath) ? "/images/profiles/default-profile.png" : request.FromUserProfileImagePath)"
                                 alt="Profil fotoğrafı"
                                 class="rounded-circle"
                                 style="width:40px;height:40px;object-fit:cover;" />
                            <div>
                                <a asp-controller="Profile"
                                   asp-action="Index"
                                   asp-route-id="@request.FromUserId"
                                   class="fw-bold text-decoration-none">
                                    @request.FromUserName
                                </a>
                                <div class="text-muted small">
                                    @request.CreatedAt.ToLocalTime().ToString("g")
                                </div>
                            </div>
                        </div>
                        <form asp-action="AcceptRequest"
                              asp-route-requestId="@request.Id"
                              method="post">
                            <button type="submit" class="btn btn-success btn-sm">
                                Kabul Et
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

    @if (!Model.Conversations.Any())
    {
        <div class="alert alert-info">
            Henüz bir mesajlaşmanız yok.
        </div>
    }
    else
    {
        <div class="list-group">
            @foreach (var conv in Model.Conversations)
            {


                 <a asp-controller="Profile"
                   asp-action="Index"
                   asp-route-id="@conv.OtherUserId"
                   class="fw-bold text-decoration-none">
                    @conv.OtherUserFullName
                </a>
                <a asp-action="Chat"
                   asp-route-id="@conv.ConversationId"
                   class="list-group-item list-group-item-action d-flex justify-content-between">


                        <small class="text-muted">@conv.LastMessage</small>


                    @if (conv.UnreadCount > 0)
                    {
                        <span class="badge bg-danger rounded-pill">
                            @conv.UnreadCount
                        </span>
                    }
                </a>
            }

        </div>
    }
</div>
