@model PharmacyJobPlatform.Web.Models.ViewModels.MessagesInboxViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/messages-index.css" />
}

<div class="container mt-4 messages-page">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h3 class="mb-1"><i class="bi bi-chat-dots me-2"></i>Mesajlar</h3>
            <p class="text-muted mb-0">Konuşmalarınızı görüntüleyin ve yönetin.</p>
        </div>
        <button class="btn btn-outline-primary btn-sm" onclick="refreshInboxConversations()">
            <i class="bi bi-arrow-repeat"></i> Yenile
        </button>
    </div>

    @if (Model.IncomingRequests.Any())
    {
        <div class="mb-4">
            <h5 class="mb-3"><i class="bi bi-envelope-paper me-2"></i>Gelen Mesaj İstekleri</h5>
            <div class="list-group">
                @foreach (var request in Model.IncomingRequests)
                {
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <img src="@(string.IsNullOrEmpty(request.FromUserProfileImagePath) ? "/images/profiles/default-profile.png" : request.FromUserProfileImagePath)"
                                 alt="Profil fotoğrafı"
                                 class="rounded-circle"
                                 style="width:40px;height:40px;object-fit:cover;" />
                            <div>
                                <a asp-controller="Profile"
                                   asp-action="Index"
                                   asp-route-id="@request.FromUserId"
                                   class="fw-bold text-decoration-none">
                                    @request.FromUserName
                                </a>
                                <div class="text-muted small">
                                    @request.CreatedAt.ToLocalTime().ToString("g")
                                </div>
                            </div>
                        </div>
                        <form asp-action="AcceptRequest"
                              asp-route-requestId="@request.Id"
                              method="post">
                            <button type="submit" class="btn btn-success btn-sm">
                                Kabul Et
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>
    }

    <div class="messages-layout">
        <aside class="messages-sidebar">
            <div class="messages-sidebar-header">
                <span>Konuşmalar</span>
                <span class="text-muted small" id="conversationCount">@Model.Conversations.Count()</span>
            </div>
            <div class="messages-sidebar-body" id="inboxConversations">
                @await Html.PartialAsync("_InboxConversations", Model.Conversations)
            </div>
        </aside>

        <section class="messages-thread" id="inboxThread">
            <div class="messages-empty">
                <i class="bi bi-chat-square-text"></i>
                <p>Bir konuşma seçerek mesajları görüntüleyin.</p>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/messages-index.js"></script>
    <script>
        window.initialConversationId = @(Model.Conversations.Any() ? Model.Conversations.First().ConversationId : 0);
    </script>
}
