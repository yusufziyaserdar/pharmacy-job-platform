@model JobPostEditViewModel
@using PharmacyJobPlatform.Domain.Enums

<h3><i class="bi bi-pencil me-2"></i>İlanı Düzenle</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="JobType"></label>
        <select asp-for="JobType" class="form-select" id="jobType">
            <option value="Permanent">Kalıcı</option>
            <option value="Daily">Günlük</option>
        </select>
    </div>

    <div class="form-check form-switch mt-3">
        <input class="form-check-input" asp-for="IsActive" />
        <label class="form-check-label">İlan Aktif</label>
    </div>

    <div class="mt-3 text-end">
        <button class="btn btn-primary"><i class="bi bi-floppy me-2"></i>Kaydet</button>
        <a asp-action="MyPosts" class="btn btn-secondary">İptal</a>
    </div>
</form>
