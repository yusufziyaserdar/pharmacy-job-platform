@model JobPostDetailsViewModel
@using PharmacyJobPlatform.Domain.Enums

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-body">

            <h3>@Model.Title</h3>


            @if(Model.JobType==JobType.Permanent)
            {
                <span class="badge bg-success">
                        Kalıcı
                </span>
            }
            else
            {
                <span class="badge bg-warning">
                    Günlük
                </span>
            }


            <hr />

            <p>@Model.Description</p>

            <p>
                <strong>Adres:</strong><br />
                @Model.City / @Model.District<br />
                @Model.Neighborhood
            </p>

            @if (Model.JobType == JobType.Daily)
            {
                <p><strong>Günlük Ücret:</strong> @Model.DailyWage ₺</p>
                <p><strong>Tarih:</strong> @Model.WorkDate?.ToString("dd.MM.yyyy")</p>
            }
            else
            {
                <p><strong>Aylık Maaş:</strong> @Model.MonthlySalary ₺</p>
            }

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Geri
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <form asp-action="DeleteByAdmin" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button class="btn btn-outline-danger">İlanı Kaldır</button>
                    </form>
                }
                else
                {
                    <div class="d-flex flex-column align-items-end gap-2">
                        @if (Model.AlreadyApplied)
                        {
                            <span class="badge bg-secondary">Başvuruldu</span>
                        }
                        else
                        {
                            <form asp-action="Apply" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="jobPostId" value="@Model.Id" />
                                <button class="btn btn-success">Başvur</button>
                            </form>
                        }

                        <form asp-controller="Reports" asp-action="Create" method="post" class="w-100">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="entityType" value="JobPost" />
                            <input type="hidden" name="entityId" value="@Model.Id" />
                            <input type="hidden" name="returnController" value="Jobs" />
                            <input type="hidden" name="returnAction" value="Details" />
                            <input type="hidden" name="returnId" value="@Model.Id" />
                            <div class="input-group input-group-sm">
                                <input class="form-control" name="reason" maxlength="500" placeholder="İlanı neden raporluyorsunuz?" required />
                                <button class="btn btn-outline-danger" type="submit">Rapor Et</button>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
